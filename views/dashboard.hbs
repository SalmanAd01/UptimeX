  <script>
    function del(id) {
      $.ajax({
        type: "DELETE",
        url: '/monitor',
        data: { 'data': id },
        success: function (response) {
          window.location.reload();
        },
        error: function (error) {
          console.log("Error")
        }
      })
    }
    function change_status(id) {
      $.ajax({
        type: "PUT",
        url: '/monitor',
        data: { 'data': id },
        success: function (response) {
          window.location.reload();
        },
        error: function (error) {
          console.log("Error")
        }
      })
    }
    function save(id) {
      document.getElementById("spinnername").innerHTML = "Sending Request"
      socket.send(JSON.stringify({
        type: "progress",
      }));
      blurMe();
      $.ajax({
        type: "POST",
        url: '/monitor/edit',
        data: {
          'id': id,
          'name': document.getElementById(`${id}name`).value,
          'url': document.getElementById(`${id}url`).value,
          'email': document.getElementById(`${id}email`).value
        },
        success: function (response) {
          setTimeout(() => {
            blurMe();
            console.log("response")
            window.location.reload();
          }, 1000)
        },
        error: function (error) {
          console.log("Error")
        }
      })
    }
  </script>


