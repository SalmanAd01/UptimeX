                class="btn-get-started scrollto d-inline-flex align-items-center justify-content-center align-self-center"
                data-bs-toggle="modal" data-bs-target="#exampleModal">
                <span>Create New Monitor<i class="bi bi-plus"></i></span>
              </a>

              <script>
                function blurMe() {
                  let spinner = document.querySelector("#loader_parent")
                  if (spinner.classList.contains("blurred")) {
                    spinner.classList.remove("blurred");
                    var all = document.querySelectorAll('button');
                    var alla = document.querySelectorAll('a');
                    for (var i = 0, len = all.length; i < len; i++) {
                      all[i].disabled = false;
                    }
                    for (var i = 0, len = alla.length; i < len; i++) {
                      alla[i].style.pointerEvents = "auto";
                      alla[i].style.cursor = "pointer";
                    }
                  } else {
                    spinner.classList.add("blurred")
                    var all = document.querySelectorAll('button');
                    var alla = document.querySelectorAll('a');
                    for (var i = 0, len = all.length; i < len; i++) {
                      all[i].disabled = true;
                    }
                    for (var i = 0, len = alla.length; i < len; i++) {
                      alla[i].style.pointerEvents = "none";
                      alla[i].style.cursor = "default";
                    }
                  }
                };
              </script>
            </div>
          </div>
