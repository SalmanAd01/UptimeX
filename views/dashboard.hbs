            </div>
            <div class="mb-3">
              <label for="url1" class="form-label"></label>
              <input type="url" class="form-control" name="url1" id="url1" aria-describedby="helpId"
                placeholder="Enter The URL">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" onclick="t1();" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    <script>
      var HOST = location.origin.replace(/^http/, 'ws')
      let socket = new WebSocket(`${HOST}/dashboard`);
      socket.onmessage = function (message) {
        let data = JSON.parse(message.data);
        document.getElementById("spinnername").innerHTML = data.msg
      };
      function t1() {
        document.getElementById("spinnername").innerHTML = "Sending Request"
        socket.send(JSON.stringify({
          type: "progress",
        }));
        blurMe();
        $.ajax({
          type: "POST",
          url: '/monitor',
          data: {
            'name1': document.getElementById('name1').value,
            'url1': document.getElementById('url1').value
          },
          success: function (response) {
            setTimeout(() => {
              blurMe();
              window.location.reload();
            }, 1000)
          },
          error: function (error) {
            document.getElementById("spinnername").innerHTML = "Error Occured"
            setTimeout(() => {
              blurMe();
              window.location.reload();
            }, 500)
          }
        })
      };
    </script>
  </section><!-- End Hero -->
  <section id="portfolio" class="portfolio">

