      {{#if monitors}}
      {{#each monitors}}
      <div class="container">
        <form class="row g-3 needs-validation" novalidate>
          <div class="col-md-3">
            <input class="form-control" id="{{this.id}}name" name="firstname" type="text" value="{{this.name}}" />
          </div>
          <div class="col-md-3">
            <input class="form-control" id="{{this.id}}url" name="lastname" type="text" value="{{this.url}}" />
          </div>
          <div class="col-md-3">
            <input class="form-control" id="{{this.id}}email" name="lastname" type="text" value="{{this.email}}" />
          </div>
          <div class="col-md-3">
            {{#if this.isblock}}
            <button type="submit" name="myunblockbtn" id="myunblockbtn" class="btn btn-outline-primary"
              onclick="change_status({{this.id}})">Unblock</button>
            {{else}}
            <button type="button" name="mydeletebtn" id="mydeletebtn" class="btn btn-outline-primary"
              onclick="del({{this.id}})">Delete</button>
            <button type="button" name="mydeletebtn" id="mydeletebtn" class="btn btn-outline-primary ms-2"
              onclick="save({{this.id}})">Save</button>
            {{/if}}
